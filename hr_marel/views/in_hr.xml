<?xml version="1.0" encoding="utf-8"?>
<flectra>
    <data>
        <record id="view_in_hr_employe_view" model="ir.ui.view">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                     <xpath expr="//page[@name='personal_information']" position="after">
                        <page string="Additional Information">
                            <group>
                                <group string="Informasi Tambahan">                        
                                    <field name="nik"/>
                                    <field name="pendidikan"/>
                                    <field name="studi"/>
                                    <field name="start_kerja"/>
                                    <field name="jml_anak"/>
                                    <field name="ibu_kandung"/>
                                    <field name="religi"/>
                                </group>
                                <group string="Alamat Pribadi">
                                    <field name="alamat"/>
                                    <field name="desa"/>
                                    <field name="rt_rw"/>
                                    <field name="kec"/>
                                    <field name="kab"/>
                                </group>
                            </group>
                        </page>
                    </xpath>
            </field>
        </record>
    </data>
</flectra>