                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"
                                string="Report Histori Pembelian"/>
                        </div>
                        <separator/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="company_id"/>
                                <!-- <field name="categ_id"/>
